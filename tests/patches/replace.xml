<Test>
    <Case>
        <Defs>
            <ExampleDef>
              <defName>Sample</defName>
              <foo>Uno</foo>
              <bar>Dos</bar>
              <baz>Tres</baz>
            </ExampleDef>    
        </Defs>
        <Patch>
            <Operation Class="PatchOperationReplace">
              <xpath>Defs/ExampleDef[defName="Sample"]/baz</xpath>
              <value>
                <baz>Drei</baz>
              </value>
            </Operation>    
        </Patch>
        <Expected>
            <ExampleDef>
              <defName>Sample</defName>
              <foo>Uno</foo>
              <bar>Dos</bar>
              <baz>Drei</baz>
            </ExampleDef>
        </Expected>
    </Case>
    <Case>
        <Name>ReplaceText</Name>
        <Defs>
            <TerrainDef>
                <defName>Bridge</defName>
                <label>Bridge</label>
            </TerrainDef>
        </Defs>
        <Patch>
            <Operation Class="PatchOperationReplace">
                <xpath>/Defs/TerrainDef[defName="Bridge"]/label/text()</xpath>
                <value>wood bridge</value>
            </Operation>        
        </Patch>
        <Expected>
            <TerrainDef>
                <defName>Bridge</defName>
                <label>wood bridge</label>
            </TerrainDef>
        </Expected>
    </Case>
</Test>
