                <statBases>
                    <ToxicEnvironmentResistance>0.5</ToxicEnvironmentResistance>
                </statBases>
            </ExampleDef>
        </Expected>
    </Case>
    <Case>
        <Name>MayRequireAnyOf</Name>
        <Mods>
            <li>ludeon.rimworld.royalty</li>
        </Mods>
        <Defs>
            <ExampleDef> 
                <defName>Sample</defName>
                <statBases>
                    <Flammability>0.5</Flammability>
